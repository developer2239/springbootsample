<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- Mapper と xml のマッピング -->
<mapper namespace="com.example.springbootsample_2.application.repository.UserMapper">

    <!-- マッピング定義 (user)-->
    <resultMap id="user" type="com.example.springbootsample_2.application.user.model.MUser" >
        <id column="user_id" property="userId" />
        <result column="password" property="password" />
        <result column="user_name" property="userName" />
        <result column="birthday" property="birthday" />
        <result column="age" property="age" />
        <result column="gender" property="gender" />
        <!-- <result column="department_id" property="departmentId" />
        <result column="role" property="role" />
        <association property="department" resultMap="department" /> -->
    </resultMap>

    <!-- マッピング定義(department部署) -->
    <!-- <resultMap  id="department" type="Department">
        <id column="department_id" property="departmentId" />
        <result column="department_name" property="departmentName" />
    </resultMap> -->


    <!-- ユーザー１件登録 -->
    <insert id="insertOne">
        insert into m_user(
            user_id,
            password,
            user_name,
            birthday,
            age,
            gender,
            department_id,
            role
        ) values (
            #{userId},
            #{password},
            #{userName},
            #{birthday},
            #{age},
            #{gender},
            #{departmentId},
            #{role}
        )
    </insert>

    <!-- ユーザ複数件取得-->
    <select id="findMany" resultType="MUser">
        select * from m_user
        <where>
            <if test="userId != null">
                user_id like '%' || #{userId} || '%'
            </if>
            <if test="userName != null">
                and user_name like '%' || #{userName} || '%'
            </if>
        </where>
    </select> 

    <!-- ユーザ1件取得-->
    <select id="findOne" resultMap="user">
        select * from 
            m_user 
        <!-- left join
            m_department on
        m_user.department_id = m_department.department_id -->
        where
            user_id = #{userId}
    </select>
    
    <!-- ユーザ一件更新 -->
    <update id="updateOne">
        update 
            m_user
        set
            password = #{user.password},
            user_name = #{user.userName}
        where
            user_id = #{user.userId}
    </update>

    <!-- ユーザ一件削除 -->
    <delete id="deleteOne">
        delete from
            m_user
        where
            user_id = #{userId}
    </delete>
</mapper>